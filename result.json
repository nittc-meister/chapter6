# -*- coding: utf-8 -*-
  
import smbus
import time
import datetime  #‰Û‘è2—p
import json  #‰Û‘è2—p

i2c = smbus.SMBus(1)
address = 0x48
json_file = open('result.json', 'w')  #‰Û‘è2—p

mydict = {}
for i in range(10):
    block = i2c.read_i2c_block_data(address, 0x00, 12)
    temp = (block[0] << 8 | block[1]) >> 3
    if(temp >= 4096):
        temp -= 8192
    print("Temperature:%6.2f" % (temp / 16.0))

    mydict.setdefault(datetime , temp / 16.0)
    json.dump(mydict ,json_file , indent=4)
    time.sleep(1)

json_file.close()
